@model trac_nghiem_project.Models.manager

@{
    ViewBag.Title = "Details";
    ViewBag.Page = "Chi tiết Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="py-2 px-5 rounded-4" style="background-color:white">
    <dl class="dl-horizontal">
        <dt>
            UserName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
            Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @{
                if (String.IsNullOrEmpty(Model.note))
                {
                    @: Không có
                }
                else
                {
                    <span>@Model.note</span>
                }
            }
        </dd>

    </dl>
    <p>
        <a href="@Url.Action("Edit", new { id = Model.id_manager })" class="btn btn-success px-3">Sửa</a>
        <a class="btn btn-primary ms-3 px-3" href="@Url.Action("Index")">Back</a>
    </p>

</div>