@model trac_nghiem_project.Models.subject

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Cập nhật môn học</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.date_create)
    @Html.HiddenFor(m => m.id_subject)
    <div class="form-group">
        @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group my-3">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" value="Cập nhật" class="btn btn-success px-3" />
            <a class="btn btn-primary ms-3 px-3" href="@Url.Action("Index")">Back</a>
        </div>
    </div>
</div>
}
