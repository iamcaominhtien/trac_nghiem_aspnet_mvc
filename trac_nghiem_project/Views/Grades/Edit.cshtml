@model trac_nghiem_project.Models.grade

@{
    ViewBag.Title = "Create";
    ViewBag.Page = "Cập nhật lớp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="py-2 px-5 rounded-4" style="background-color:white">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.date_create)
    @Html.HiddenFor(model => model.id_grade)
    <div class="form-group my-2">
        @Html.LabelFor(model => model.name, "Tên lớp", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group my-3">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" value="Thêm" class="btn btn-success px-3" />
            <a class="btn btn-primary ms-3 px-3" href="@Url.Action("Index")">Back</a>
        </div>
    </div>
</div>
}
