@model IEnumerable<trac_nghiem_project.Models.grade>

@{
    ViewBag.Title = "Index";
    ViewBag.Page = "Quản lí lớp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @*@Html.ActionLink("Thêm admin", "Create")*@
    <a href="@Url.Action("Create")" class="btn btn-success">Thêm lớp</a>
</p>

<table class="table">
    <tr class="table-dark">
        <th>
            Tên lớp
        </th>
        <th>
            Ngày tạo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.FormatValue(item.date_create, "{0:dd/MM/yyyy}")
        </td>
        <td>
            <div class="float-end">
                <a href="@Url.Action("Edit",
                                new { id = item.id_grade.ToString().Trim()})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
                <a href="@Url.Action("Details",
                                new { id = item.id_grade.ToString().Trim()})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
                <a href="@Url.Action("Delete",
                                new { id = item.id_grade.ToString().Trim()})" class="edit-btn">
                    <abbr title="Xóa dữ liệu">
                        <img src="/images/delete.png" width="20" height="20" />
                    </abbr>
                </a>
            </div>
        </td>
    </tr>
}

</table>
