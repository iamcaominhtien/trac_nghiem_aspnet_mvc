@model IEnumerable<trac_nghiem_project.Models.exam>

@{
    ViewBag.Title = "Index";
    ViewBag.Page = "Quản lí bài kiểm tra";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @*@Html.ActionLink("Thêm admin", "Create")*@
    <a href="@Url.Action("Create")" class="btn btn-success">Thêm bài kiểm tra</a>
</p>
<table class="table">
    <tr class="table-dark">
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.time_to_do)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_create)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subject.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.time_to_do) phút
            </td>
            <td>
                @Html.FormatValue(item.date_create, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @{
                    if (item.status == true)
                    {
                        @:Mở
                    }
                    else
                    {
                        @:Khóa
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject.name)
            </td>
            <td>
                <div class="float-end">
                    <a href="@Url.Action("Edit",
                                new { id = item.id_exam.ToString().Trim()})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
                    <a href="@Url.Action("Details",
                                new { id = item.id_exam.ToString().Trim()})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
                    <a href="@Url.Action("Delete",
                                new { id = item.id_exam.ToString().Trim()})" class="edit-btn">
                        <abbr title="Xóa dữ liệu">
                            <img src="/images/delete.png" width="20" height="20" />
                        </abbr>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>