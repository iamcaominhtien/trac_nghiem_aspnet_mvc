@model trac_nghiem_project.Common.AddExam

@{
    ViewBag.Title = "Ngân hàng câu hỏi";
    //ViewBag.Page = "Cập nhật ngân hàng câu hỏi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section aboveAll{
    <div class="myBox sticky-top" id="out_aboveALl">
        <div class="stack-top opacity-100 rounded-4" id="aboveALl">
            <button onclick="closeAboveAll()" class="btn bg-white border-1 border-dark rounded-circle">
                <i class="fa fa-close border-0"></i>
            </button>
            <div class="px-4 pb-1 px-lg-5 pb-lg-5" id="containerChildAboveAll">
                <div id="childAboveAll" class="stack-top" style="width:100%;height:95%">
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/Assets/js/my_js/aboveAll.js"></script>
    <script src="~/Assets/js/my_js/listAllQuestionOnExam.js"></script>
}

<div class="py-3">
    <h2 class="text-uppercase fw-bold">Cập nhật ngân hàng câu hỏi</h2>
    <small>Lớp: @ViewBag.name_grade</small><br />
    <small>Môn: @ViewBag.name_subject</small>
</div>

<a href="@Url.Action("ListExam", new {id_subject_grade = ViewBag.id_subject_grade})" class="btn btn-primary px-4">Back</a>

<input type="hidden" value="@ViewBag.id_question_bank" name="id_question_bank" id="id_question_bank" />

<div class="form-group my-3">
    @Html.Action("ListAllQuestionFrom", "Questions", new { area = "admin", id_question_bank = ViewBag.id_question_bank })
</div>

<div class="form-group my-3">
    @Html.Action("Create", "Questions", new { area = "admin", id_question_bank = ViewBag.id_question_bank })
</div>

<script id="childAboveAll_radio_4" type="text/html">
