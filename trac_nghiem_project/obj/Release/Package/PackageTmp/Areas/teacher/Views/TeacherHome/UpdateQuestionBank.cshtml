                    <div class="col-12">
                        <input class="form-control text-box single-line" data-val="true_edit" id="answer_4_edit" name="answer_4_edit" type="text" value="#answer_4">
                        <span class="field-validation-valid text-danger" data-valmsg-for="answer_4" data-valmsg-replace="true"></span>
                    </div>
                </div>
            </div>

            <div class="form-group my-2">
                <span class="fw-bold">Chọn đáp án</span>
                <select class="form-control" id="correct_edit" name="correct_edit">
