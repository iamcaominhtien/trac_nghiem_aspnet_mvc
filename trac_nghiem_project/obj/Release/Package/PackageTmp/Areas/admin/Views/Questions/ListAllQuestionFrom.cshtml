@model IEnumerable<trac_nghiem_project.Common.CreatedQuestion>

@{ 
    int count = 1;
}

<div class="py-2 px-5 rounded-4" style="background-color:white">
    <h4 class="text-uppercase fw-bold mb-3" style="text-align:center">Danh sách câu hỏi: <span id="titleNumberOfQuestion">@Model.Count()</span></h4>
    <table class="table" id="list_all_question_page">
        <tr class="table-dark">
            <th>STT</th>
            <th style="width:max-content">
                Câu hỏi
            </th>
            <th style="width:130px" class="d-none d-sm-table-cell d-md-table-cell d-lg-table-cell">
                Loại
            </th>
            <th style="width:105px;" class="d-none d-sm-none d-md-table-cell d-lg-table-cell">
                Ngày tạo
            </th>
            <th style="width:90px;"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="stt">@count</td>
                @{ count++;}
                <td>
                    @Html.DisplayFor(modelItem => item.question)
                </td>
                <td class="d-none d-sm-table-cell d-md-table-cell d-lg-table-cell" style="height:100px">
                    @Html.DisplayFor(modelItem => item.question_type)
                </td>
                <td class="d-none d-sm-none d-md-table-cell d-lg-table-cell">
                    @Html.FormatValue(item.date_create, "{0:dd/MM/yyyy}")
                </td>
                <td>
                    <div class="">
                        <button onclick="onClickShowAboveAll(this, @item.id_question, false, @item.id_question_type)" class="edit-btn btn btn-default p-0 border-0 rounded-0 mb-1"><abbr title="Cập nhật dữ liệu"><img src="~/Images/edit.png" width="20" height="20" /></abbr></button>
                        <button onclick="onClickShowAboveAll(this, @item.id_question,true, @item.id_question_type)" class="edit-btn btn btn-default p-0 border-0 rounded-0 mb-1"><abbr title="Xem chi tiết"><img src="~/Images/details.png" width="20" height="20" /></abbr></button>
                        <button class="edit-btn btn btn-default p-0 border-0 rounded-0 mb-1" onclick="delQuestion(this,@item.id_question.ToString().Trim())">
                            <abbr title="Xóa dữ liệu">
                                <img src="~/Images/delete.png" width="20" height="20" />
                            </abbr>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

<script id="question_item" type="text/html">
    <tr>
        <td class="stt">#stt</td>

        <td>
            #question
        </td>
        <td class="d-none d-sm-table-cell d-md-table-cell d-lg-table-cell" style="height:100px">
            #question_type
        </td>
        <td class="d-none d-sm-none d-md-table-cell d-lg-table-cell">
            #created_date
        </td>
        <td>
            <div class="float-end">
                <button onclick="onClickShowAboveAll(this, #id_question, false, #id_question_type)" class="edit-btn btn btn-default p-0 border-0 rounded-0 mb-1"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></button>
                <button onclick="onClickShowAboveAll(this, #id_question,true, #id_question_type)" class="edit-btn btn btn-default p-0 border-0 rounded-0 mb-1"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></button>
                <button class="edit-btn btn btn-default p-0 border-0 rounded-0 mb-1" onclick="delQuestion(this,#id_question)">
                    <abbr title="Xóa dữ liệu">
                        <img src="/images/delete.png" width="20" height="20" />
                    </abbr>
                </button>
            </div>
        </td>
    </tr>
</script>
